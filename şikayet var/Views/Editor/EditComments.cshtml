@model Comments

@{
    ViewData["Title"] = "Yorum Düzenle";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow p-4" style="background-color: #f8f9fa;">
        <h2 class="text-center mb-4">Yorumu Düzenle</h2>

        <form asp-action="EditComment" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ComplaintId" />

            <div class="mb-3">
                <label class="form-label">Yorum İçeriği</label>
                <textarea class="form-control" asp-for="Content" rows="4" required></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>