@model Complaints

@{
    ViewData["Title"] = "Şikayet Düzenle";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow p-4" style="background-color: #f8f9fa;">
        <h2 class="text-center mb-4">Şikayeti Düzenle</h2>

        <form asp-action="EditComplaint" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label">Başlık</label>
                <input type="text" class="form-control" asp-for="Title" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Açıklama</label>
                <textarea class="form-control" asp-for="Description" rows="4" required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Resim URL</label>
                <input type="text" class="form-control" asp-for="ImagePath" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>
